  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\NuVelocity.SharpZipLib\src\ICSharpCode.SharpZipLib\ICSharpCode.SharpZipLib.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="NuVelocity.Text" />
  </ItemGroup>

